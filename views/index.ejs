<%- include('layout/header') %>

<div class="container">
    <div class="row my-5">
        <div class="col-lg-12">
            <% if(message){ %>
                <div class="alert alert-dismissable fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            <div class="table-responsive">
                <% if(users.length > 0) { %> <!-- Use 'users' here, not 'user' -->
                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row, index) => { %> <!-- Use 'users' here -->
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><img src="/uploads/<%= row.image %>" width="60" class="img-thumbnail" alt=""></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.email %></td>
                                    <td><%= row.phone %></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="fas fa-edit fa-lg mx-1"></a>
                                        <a href="/delete/<%= row._id %>" class="fas fa-trash fa-lg mx-1"></a>
                                    </td>
                                </tr> 
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No Users Found in Database</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
